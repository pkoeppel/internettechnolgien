<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldProject.MapsPage">
    <StackLayout>
        <Label Text="Welcome to the maps page!"
                HorizontalOptions="CenterAndExpand" />
        <Button x:Name="currLocation" Text="Get your current location" Clicked="currLocation_Clicked"/>
        <Button x:Name="locOfGlauchau" Text="Get the location of Glauchau" Clicked="locOfGlauchau_Clicked"/>
        <Entry x:Name="longitude" Placeholder="longitude"/>
        <Entry x:Name="latitude" Placeholder="latitude"/>
        <Button x:Name="openSelectedLocation" Text="Open map" Clicked="openSelLoc_Clicked"/>
        <Button x:Name="showGlauchau" Text="Show Glauchau" Clicked="showGlauchau_Clicked"/>
        <Button x:Name="dirGlauchauCur" Text="Show direction between you and Glauchau" Clicked="dirGlauchauCur_Clicked"/>
    </StackLayout>
</ContentPage>