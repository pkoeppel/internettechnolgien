<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorldProject.SensorPage">
    <StackLayout>
        <Label Text="Welcome to the Sensorik page!"
                HorizontalOptions="CenterAndExpand" />
        <Label Text="Accelerometer (X,Y,Z)"/>
        <Entry x:Name="accelometer" IsReadOnly="True"/>
        <Label Text="Barometer"/>
        <Entry x:Name="barometer" IsReadOnly="True"/>
        <Label Text="Battery (Level, State, Source)"/>
        <Entry x:Name="battery" IsReadOnly="True"/>
        <Label Text="Compass"/>
        <Entry x:Name="compass" IsReadOnly="True"/>
    </StackLayout>
</ContentPage>